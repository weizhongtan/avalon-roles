{
  "name": "avalon-roles",
  "version": "0.2.0",
  "description": "auto assigns avalon roles",
  "scripts": {
    "start": "DEBUG=avalon:* node src/server/index.js",
    "flow-remove-types": "flow-remove-types src/ --ignore src/client -d build",
    "start-dev": "DEBUG=avalon:* nodemon --exec \"npm run flow-remove-types && node build/server/index.js\" --ignore src/client/ --ignore dist --ignore .cache --ignore build",
    "build-production": "parcel build src/client/index.html",
    "build-dev": "parcel watch src/client/index.html",
    "postinstall": "npm run build-production",
    "lint": "eslint --fix src",
    "test": "jest",
    "flow": "flow"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "jquery": "^3.3.1",
    "knuth-shuffle": "^1.0.1",
    "koa": "^2.5.2",
    "koa-route": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.2",
    "koa-static": "^5.0.0",
    "koa-websocket": "^5.0.1",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "semantic-ui-css": "^2.3.3",
    "semantic-ui-react": "^0.82.1",
    "uuid": "^3.3.2"
  },
  "main": "./server/index.js",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.78.0",
    "flow-remove-types": "^1.2.3",
    "jest": "^23.4.2",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.3",
    "parcel": "^1.9.7",
    "react-test-renderer": "^16.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weizhongtan/avalon-roles.git"
  },
  "author": "wzt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weizhongtan/avalon-roles/issues"
  },
  "homepage": "https://github.com/weizhongtan/avalon-roles#readme",
  "engines": {
    "node": "^10.5.0"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testURL": "http://localhost/"
  }
}
